html,
body,
.root {
  margin: 0;
  min-height: 100%;
  height: 100%;
  max-height: 100vh;
  width: 100%;
}

.experimental {
  position: fixed;
  width: 100px;
  height: 100px;
  background: cornflowerblue;
  color: red;
  border-radius: 100%;
}

.content {
  height: 3000px;
}

*, *:before, *:after {
  box-sizing: border-box;
}
